{
  "title": "activity-streams-experiment",
  "name": "activity-streams",
  "version": "1.0.0",
  "description": "A feed-based view on user history",
  "repository": "mozilla/activity-streams",
  "bugs": {
    "url": "https://github.com/mozilla/activity-streams/issues"
  },
  "author": "Mozilla",
  "engines": {
    "firefox": ">=45.0 <=*"
  },
  "main": "lib/main.js",
  "license": "MPL-2.0",
  "keywords": [
    "mozilla",
    "firefox",
    "activity-streams"
  ],
  "updateURL": "https://moz-activity-streams.s3.amazonaws.com/dist/update.rdf",
  "updateLink": "https://moz-activity-streams.s3.amazonaws.com/dist/activity-streams-latest.xpi",
  "dependencies": {
    "classnames": "2.2.3",
    "history": "1.17.0",
    "moment": "2.11.2",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-redux": "4.1.2",
    "react-router": "1.0.3",
    "redux": "3.2.0",
    "redux-logger": "2.4.0",
    "redux-thunk": "1.0.3",
    "url-parse": "1.0.5"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "babel-plugin-transform-es2015-destructuring": "^6.4.0",
    "babel-plugin-transform-es2015-parameters": "^6.4.5",
    "babel-plugin-transform-strict-mode": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "colors": "^1.1.2",
    "conventional-changelog-cli": "^1.1.1",
    "cpx": "^1.2.1",
    "eslint": "^2.2.0",
    "eslint-plugin-mozilla": "^0.0.3",
    "eslint-plugin-react": "^4.1.0",
    "husky": "^0.10.2",
    "istanbul-instrumenter-loader": "^0.1.3",
    "jpm": "^1.0.5",
    "jscs": "^2.9.0",
    "json-loader": "^0.5.4",
    "karma": "^0.13.19",
    "karma-chai": "^0.1.0",
    "karma-chai-as-promised": "^0.1.2",
    "karma-chrome-launcher": "^0.2.2",
    "karma-coverage": "^0.5.3",
    "karma-coveralls": "^1.1.2",
    "karma-firefox-launcher": "^0.1.7",
    "karma-html2js-preprocessor": "^0.1.0",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-requirejs": "^0.2.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "live-server": "^0.9.1",
    "minimist": "^1.2.0",
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.5.1",
    "react-addons-test-utils": "^0.14.7",
    "redux-mock-store": "0.0.6",
    "requirejs": "^2.1.22",
    "sass-lint": "^1.5.0",
    "webpack": "^1.12.12",
    "webpack-notifier": "^1.2.1",
    "yamljs": "^0.2.4",
    "yamscripts": "^0.0.2"
  },
  "scripts": {
    "once": "npm run bundle && npm run firefox",
    "clean": "rm -rf data/content/* && mkdir -p data/content",
    "changelog": "conventional-changelog -i CHANGELOG.md -s",
    "bundle": "npm-run-all bundle:*",
    "prebundle": "npm run clean",
    "bundle:static": "cpx \"content-src/static/**/*\" data/content",
    "bundle:webpack": "NODE_ENV=production webpack",
    "bundle:css": "node-sass content-src/main.scss -o data/content",
    "bundle:html": "node ./bin/generate-html.js > data/content/activity-streams.html",
    "postbundle": "du -hs ./data/content/*",
    "start": "npm-run-all --parallel start:*",
    "prestart": "npm run clean",
    "start:static": "npm run bundle:static -- -w",
    "start:webpack": "webpack -w",
    "start:css": "npm run bundle:css && npm run bundle:css -- -w",
    "start:html": "npm run bundle:html -- --baseUrl http://localhost:1963/",
    "start:server": "live-server data/content --port=1963 --no-browser",
    "firefox": "jpm run -b beta",
    "test": "npm-run-all test:*",
    "pretest": "npm run bundle",
    "test:lint": "eslint . && jscs . && sass-lint -v -q",
    "test:jpm": "jpm test -b beta",
    "test:karma": "NODE_ENV=test karma start --browsers FirefoxNightly",
    "tdd": "karma start --no-single-run",
    "package": "npm run bundle && jpm xpi && mv @activity-streams-$npm_package_version.xpi dist/activity-streams-$npm_package_version.xpi",
    "travis": "npm-run-all travis:*",
    "travis:eslint": "npm run test:lint",
    "travis:jpm": "jpm test -b $JPM_FIREFOX_BINARY -v",
    "travis:karma": "NODE_ENV=test karma start --reporters mocha,coverage,coveralls",
    "precommit": "npm run test:lint && npm run yamscripts",
    "help": "yamscripts help",
    "yamscripts": "yamscripts compile",
    "__": "# NOTE: THESE SCRIPTS ARE COMPILED!!! EDIT yamscripts.yml instead!!!"
  }
}
