@import './styles/normalize';
@import './styles/variables';

html,
body,
#root {
  height: 100%;
}

// For screen readers
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  border: 0;
}

body {
  background: $bg-color;
  color: $dark-grey;
  // TODO: actually figure out system font here
  font-family: -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 16px;
}

h1,
h2 {
  font-weight: normal;
}

a {
  color: $link-blue;
  text-decoration: none;

  &:hover {
    color: lighten($link-blue, 10%);
  }
}

.inner-border {
  border: 1px solid $faintest-black;
  border-radius: $border-radius;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 100;
}

.show-on-init {
  opacity: 0;
  transition: opacity 0.2s ease-in;

  &.on {
    opacity: 1;
  }
}

